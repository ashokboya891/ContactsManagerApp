@{
    ViewBag.Title = "Upload page";
}

<div class="flex">
    <div class="flex-1">
        <div class="text-grey">
            <span>Contacts</span>
            <i class="fa-solid fa-caret-right"></i>
            <span class="text-grey">Upload</span>
        </div>
    </div>

<div class="w-50">
<h4 class="text-large">Upload countries from excel</h4>

    <form asp-action="UploadExcelForm" asp-controller="Upload" method="post" enctype="multipart/form-data">
        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label pt" for="excelFile" class="">Choose an xlsx file</label>


            </div>
            <div class="flex">
                <input type="file" name="excelFile" class="form-input" id="excelFile"/>
                <div class="text-red">@ViewBag.ErrorMessage</div>
                <div class="text-green">@ViewBag.Message</div>

            </div>

        </div>

           <div class="form-field flex">
               <div class="w-25">
                   <div class="flex-1">
                       <button type="submit" class="button-green-back">Upload</button>
                   </div>

               </div>

           </div>
    </form>

</div>
