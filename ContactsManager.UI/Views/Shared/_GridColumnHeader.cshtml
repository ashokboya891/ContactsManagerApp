@if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurentSortOrder == SortOrderOptions.ASC.ToString())
{
    <th>
        <a href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&;
                        searchString=@ViewBag.SearchString&sortBy=@ViewBag.ColumnName &sortOrder=@nameof(SortOrderOptions.DESC)">@ViewBag.DisplayName</a>
        <i class="fa-solid fa-sort-up"></i>
    </th>
}
else if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurentSortOrder == SortOrderOptions.DESC.ToString())
{
    <th>
        <a href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&;
                        searchString=@ViewBag.SearchString&sortBy=@ViewBag.ColumnName &sortOrder=@nameof(SortOrderOptions.ASC)">
            @ViewBag.DisplayName
        </a>
        <i class="fa-solid fa-sort-down"></i>

    </th>
}
else
{
    <th>
        <a href="~/persons/index?searchBy=@ViewBag.CurrentSearchBy&;
                        searchString=@ViewBag.SearchString&sortBy=@ViewBag.ColumnName&sortOrder=@nameof(SortOrderOptions.ASC)">@ViewBag.DisplayName</a>
    </th>
}
